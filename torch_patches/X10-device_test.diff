+# Acquires XLA metadata
+import os
+from runpy import run_path
+file_dir = os.path.dirname(os.path.abspath(__file__))
+xla_meta_path = file_dir + "/../xla/test/allowed_tests.py"
+xla_meta = run_path(xla_meta_path)
+assert xla_meta
+allowed_xla_tests = xla_meta.get('allowed_xla_tests', None)
+assert allowed_xla_tests is not None
+
